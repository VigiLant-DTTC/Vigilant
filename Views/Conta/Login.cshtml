@{
    ViewData["Title"] = "Login";

    ViewData[index: "ExcludeSharedCss"] = true;
}

@section Styles {
    <link rel="stylesheet" href="/css/Conta.css" asp-append-version="true" />
}

<div class="auth-container">

    @if (TempData["Sucesso"] != null)
    {
        <div class="success-message">@TempData["Sucesso"]</div>
    }

    @if (ViewBag.Erro != null)
    {
        <div class="error-message">@ViewBag.Erro</div>
    }

    <a class="logo">
        <i class="bx bx-shield-alt"></i>
        <div class="logo-name"><span>Vigi</span>Lant</div>
    </a>

    <form asp-controller="Conta" asp-action="Login" method="post" class="auth-form">
        <h2>Login</h2>

        <div class="form-group">
            <label for="email">E-mail</label>
            <input type="email" id="email" name="email" required />
        </div>
        <div class="form-group">
            <label for="senha">Senha</label>
            <input type="password" id="senha" name="senha" required />
        </div>

        <button type="submit" class="btn-primary">Entrar</button>

        <p class="auth-switch">
            NÃ£o tem conta? <a asp-controller="Conta" asp-action="Register">Cadastre-se</a>
        </p>
    </form>
</div>