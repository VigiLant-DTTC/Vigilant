@using VigiLant.Models.Enum

@{
    ViewData["Title"] = "Configurações";
}

<link rel="stylesheet" href="/css/config.css" asp-append-version="true" />


<div class="PageFlex">
    <div class="page-header">
        <h1 class="page-title">Configurações</h1>
        <div class="breadcrumb">
            <a href="@Url.Action("Index", "Home")">Dashboard</a>
            <span class="separator">/</span>
            <span class="active">Configurações</span>
        </div>
    </div>
</div>

<div class="mobile-settings-container">
    @if (User.IsInRole("Administrador") || User.IsInRole("Gestor"))
    {
        <a href="@Url.Action("ConfigBroker", "Configuracoes")" class="settings-item">
            <div class="settings-content">
                <div class="settings-icon icon-primary">
                    <i class="fas fa-satellite-dish"></i>
                </div>
                <div class="settings-text">
                    <span class="settings-title">Configurações MQTT Broker</span>
                    <span class="settings-subtitle">Ajuste o host e o tópico para conectar ao broker.</span>
                </div>
            </div>
            <div class="settings-chevron">
                <i class="fas fa-chevron-right"></i>
            </div>
        </a>
    }

    <a href="#" class="settings-item">
        <div class="settings-content">
            <div class="settings-icon icon-secondary">
                <i class="fas fa-user-shield"></i>
            </div>
            <div class="settings-text">
                <span class="settings-title">Usuários e Permissões</span>
                <span class="settings-subtitle">Gerenciar acesso e papéis no sistema.</span>
            </div>
        </div>
        <div class="settings-chevron">
            <i class="fas fa-chevron-right"></i>
        </div>
    </a>

    <a href="#" class="settings-item">
        <div class="settings-content">
            <div class="settings-icon icon-info">
                <i class="fas fa-bell"></i>
            </div>
            <div class="settings-text">
                <span class="settings-title">Configurações de Notificação</span>
                <span class="settings-subtitle">Definir limites e canais para alertas.</span>
            </div>
        </div>
        <div class="settings-chevron">
            <i class="fas fa-chevron-right"></i>
        </div>
    </a>

    <div class="settings-item settings-item-switch">
        <div class="settings-content">
            <div class="settings-icon icon-secondary" style="background-color: #28a745;">
                <i class="fas fa-moon"></i>
            </div>
            <div class="settings-text">
                <span class="settings-title">Modo Noturno</span>
                <span class="settings-subtitle">Ativar tema escuro para a interface.</span>
            </div>
        </div>

        <label class="switch">
            <input type="checkbox">
            <span class="slider round"></span>
        </label>
    </div>

</div>